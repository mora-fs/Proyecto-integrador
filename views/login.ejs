<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head', {title: 'Log-in', stylesheet: 'userFormsStyle.css'}) %> 
</head>
<body>
    <%- include('./partials/header') %>
    <main>
        <h2 id="titulo">INICIÁ SESIÓN</h2>
        <form method="POST" action="/login" id="formulario">
            <div class="form-and-logo">    
                <div class="image-user">
                    <i class="fas fa-users"></i>
                </div>
                <div class="user-pass">

                    <% if(locals && locals.errorMessage && locals.errorMessage == 'Usuario no encontrado'){ %> 
                        <div><p class="validation-error"><%=  errorMessage %></p></div>
                    <% } %> 
                    <div class="username">
                        <label for="nombre-usuario">EMAIL</label>
                        <% if(locals && locals.errorMessage && locals.errorMessage.email){ %> 
                            <div><p class="validation-error"><%=  errorMessage.email.msg %></p></div>
                        <% } %> 
                        
                        <input id="nombre-usuario" name="email"  value="<%=locals&&locals.old&&locals.old.email?old.email:null%>" >
                    </div>
                    <div class="password">    
                        <label for="contraseña">CONTRASEÑA</label>
                        <% if(locals && locals.errorMessage && locals.errorMessage == 'Contraseña incorrecta'){ %> 
                            <div><p class="validation-error"><%=  errorMessage %></p></div>
                        <% } %> 
                        <% if(locals && locals.errorMessage && locals.errorMessage.password){ %> 
                            <div><p class="validation-error"><%=  errorMessage.password.msg %></p></div>
                        <% } %> 
                        <input type="password" id="password"  name="password" >
                    </div>
                </div>
            </div>
            <div id="divBotones">
                <button type="submit" class="botonFormulario">Ingresar</button>
                <a class="botonFormulario botonLink" href="/register">¿Aún no tienes cuenta?</a>
            </div>
        </form>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>