<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head', {title: 'Creando producto', stylesheet: 'createStyle.css'}) %>
    
</head>
<body>
    <%- include('partials/header') %> 
    <main>
        <form action="/productos/crear" enctype="multipart/form-data" method="POST">
            <div class="campo">
                <label for="nombre">Nombre del producto:</label>
                <% if(locals && locals.errorMessage && locals.errorMessage.name){%>
                    <div><p class="validation-error"><%=  errorMessage.name.msg %></p></div> 
                <% } %>
                <input type="text" value="<%=locals&&locals.old&&locals.old.name?old.name:null%>" id="name" name="name">
            </div>
            
            <div class="campo">
                <label for="marca">Marca:</label>
                <% if(locals && locals.errorMessage && locals.errorMessage.marca){%>
                    <div><p class="validation-error"><%=  errorMessage.marca.msg %></p></div> 
                <% } %>
                <input type="text" value="<%=locals&&locals.old&&locals.old.marca?old.marca:null%>" name="marca">
            </div>
            <div class="campo">
                <label for="price">Precio:</label>
                <% if(locals && locals.errorMessage && locals.errorMessage.price){%>
                    <div><p class="validation-error"><%=  errorMessage.price.msg %></p></div> 
                <% } %>
                <input type="number" value="<%=locals&&locals.old&&locals.old.price?old.price:null%>" name="price">
            </div>
            <div class="campo">
                <label for="discount">Descuento:</label>
                <% if(locals && locals.errorMessage && locals.errorMessage.discount){%>
                    <div><p class="validation-error"><%=  errorMessage.discount.msg %></p></div> 
                <% } %>
                <input type="number" value="<%=locals&&locals.old&&locals.old.discount?old.discount:null%>" name="discount">
            </div>
            <div class="campo">
                <label for="cantidad">Cantidad:</label>
                <% if(locals && locals.errorMessage && locals.errorMessage.cantidad){%>
                    <div><p class="validation-error"><%=  errorMessage.cantidad.msg %></p></div> 
                <% } %>
                <input type="text" value="<%=locals&&locals.old&&locals.old.cantidad?old.cantidad:null%>" name="cantidad">
            </div>
            <!-- <div class="campo">
                <label for="color">Color:</label>
                <input type="text" name="color">
            </div> -->
            <div class="campo">
                <label for="category">Categoría:</label>
                <% if(locals && locals.errorMessage && locals.errorMessage.category){%>
                    <div><p class="validation-error"><%=  errorMessage.category.msg %></p></div> 
                <% } %>
                <select name="category" id="categoria">
                    <option value="">-</option>
                    <option value="Cuidado Bucal" <%=locals&&locals.old&&locals.old.category=="Cuidado Bucal"?'selected':null%>>Cuidado bucal</option>
                    <option value="Cuidado Corporal" <%=locals&&locals.old&&locals.old.category=="Cuidado Corporal"?'selected':null%>>Cuidado corporal</option>
                    <option value="Cuidado Facial" <%=locals&&locals.old&&locals.old.category=="Cuidado Facial"?'selected':null%>>Cuidado facial</option>
                    <option value="Verano" <%=locals&&locals.old&&locals.old.category=="Verano"?'selected':null%>>Verano</option>
                    <option value="Capilar" <%=locals&&locals.old&&locals.old.category=="Capilar"?'selected':null%>>Capilar</option>
                    <option value="Higiene" <%=locals&&locals.old&&locals.old.category=="Higiene"?'selected':null%>>Higiene</option>
                </select>
            </div>
            <div class="campo">
                <label for="">Descripción:</label>
                <% if(locals && locals.errorMessage && locals.errorMessage.description){%>
                    <div><p class="validation-error"><%=  errorMessage.description.msg %></p></div> 
                <% } %>
                <textarea name="description" placeholder="Caracteristicas, detalles, etc..." rows="4" cols="50" ><%=locals&&locals.old&&locals.old.description?old.description:null%></textarea>
            </div>
            <div class="campo">
                <label for="">Imagen:</label>
                <% if(locals && locals.errorMessage && locals.errorMessage.imgNewProduct){%>
                    <div><p class="validation-error"><%=  errorMessage.imgNewProduct.msg %></p></div> 
                <% } %>
                <input type="file" name="imgNewProduct">
            </div>
            <button type="submit" class="campo">Crear producto</button>
        </form>
            
        </main>
        <%- include('partials/footer') %> 
</body>
</html>